<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluedatax.wdsm" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/ActionBarNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/ActionBarNoTitle" >
        </activity>
        <activity
            android:name=".activity.CommunityBroadcast"
            android:theme="@style/ActionBarNoTitle" >
        </activity>
        <activity
            android:name=".activity.SendBroadcast"
            android:theme="@style/ActionBarNoTitle" >
        </activity>

        <service android:name=".service.MyService" />

        <activity
            android:name=".activity.DeviceDetails"
            android:label="@string/title_activity_device_details" >
        </activity>
    </application>

</manifest>

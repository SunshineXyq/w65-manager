<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_return"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:text="设备详情" />

        </RelativeLayout>

    <TextView
        style="@style/horizontal_line" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        style="@style/horizontal_line"
        android:layout_marginLeft="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/personal_information_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="设备ID"
                />

            <TextView
                style="@style/device_details_text"
                android:text="000-2340-1234-0001"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="设备类型"
                />

            <TextView
                style="@style/device_details_text"
                android:text="智能手表"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="设备MAC"
                />

            <TextView
                style="@style/device_details_text"
                android:text="4A:00:00:CB:B6:91"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="设备IP"
                />

            <TextView
                style="@style/device_details_text"
                android:text="FEDC:BA98:7654:4210:FEDC"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="设备名称"
                />

            <TextView
                style="@style/device_details_text"
                android:text="父亲"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="位置"
                />

            <TextView
                style="@style/device_details_text"
                android:text="中关村双榆树知春里社区"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="是否欠费"
                />

            <TextView
                style="@style/device_details_text"
                android:text="否"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="距离"
                />

            <TextView
                style="@style/device_details_text"
                android:text="约5米"
                />



        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/device_details_name_text"
                android:text="电量"
                />

            <TextView
                style="@style/device_details_text"
                android:text="30%"
                />

        </LinearLayout>

        <TextView
            style="@style/horizontal_line"
            android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/device_details_name_text"
                    android:text="佩戴状态"
                    />

                <TextView
                    style="@style/device_details_text"
                    android:text="正常"
                    />

            </LinearLayout>

            <TextView
                style="@style/horizontal_line"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/listview_community_item"
                    android:text="用户授权"
                    />



            </LinearLayout>

            <TextView
                style="@style/horizontal_line"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        </ScrollView>



</LinearLayout>
